---
interface Props {
  href: string;
  label: string;
  download?: string;
}

const { href, label, download } = Astro.props;
---

<a
  href={href}
  rel='noopener noreferrer'
  target='_blank'
  class='hover:scale-110 transition-transform duration-300'
  download={download}
>
  <span class='sr-only'>{label}</span>
  <slot />
</a>