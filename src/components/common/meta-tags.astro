---
import { getI18N, getLangFromUrl } from '~/i18n/utils';

interface Props {
  title?: string;
}

const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const i18n = getI18N({ currentLocale: lang });
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="author" content="Miguel Vega" />
<meta name="developer" content="atleugim" />
<meta name="description" content={i18n.meta.description} />
<meta name="category" content={i18n.meta.category} />

<meta property="og:type" content="website" />
<meta property="og:locale" content="en_US" />
<meta property="og:url" content="https://atleugim.dev" />
<meta property="og:title" content={title ?? i18n.meta.title} />
<meta property="og:description" content={i18n.meta.description} />
<meta
  property="og:image"
  content="https://atleugim.dev/assets/images/miguel_angel.webp"
/>
<meta property="og:image:width" content="800" />
<meta property="og:image:height" content="600" />

<meta name="twitter:creator" content="@atleugim" />
<meta name="twitter:title" content={title ?? i18n.meta.title} />
<meta name="twitter:description" content={i18n.meta.description} />
<meta name="twitter:site" content="https://atleugim.dev" />
<meta name="twitter:card" content="summary_large_image" />
<meta
  name="twitter:image"
  content="https://atleugim.dev/assets/images/miguel_angel.webp"
/>

<meta name="robots" content="index,follow" />
<meta
  name="googlebot"
  content="index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1"
/>

<meta
  name="keywords"
  content="developer,development,programación,programador,desarrollo,desarrollador,react,frontend,web,web developer,flutter,dart,mobile developer,desarrollador móvil,flutter developer,app developer,android,ios, atleugim, atleugim.dev, leugim, leugim.dev, miguel vega, miguel angel vega, miguel vega dev, miguel angel vega dev, dev"
/>

<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="canonical" href="https://atleugim.dev/" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<title>{title ?? i18n.meta.title}</title>
