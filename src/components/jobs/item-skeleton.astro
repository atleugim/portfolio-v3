---
import BriefcaseBusiness from '../common/icons/briefcase-business.astro';
import Skeleton from '../common/skeleton.astro';
---

<li class="ml-5">
  <span
    class="absolute -left-5 flex size-10 items-center justify-center rounded-full border border-gray-200 bg-gray-50 dark:border-gray-800 dark:bg-gray-950"
  >
    <BriefcaseBusiness class="size-4 text-gray-800 dark:text-gray-200" />
  </span>
  <div
    class="ml-2 space-y-3 rounded-md border border-gray-200 bg-gray-50 p-4 dark:border-gray-800 dark:bg-gray-950"
  >
    <div class="flex items-center justify-between gap-2">
      <Skeleton class="h-4 w-40" />
      <Skeleton class="h-4 w-32" />
    </div>
    <div class="flex flex-col space-y-1">
      <Skeleton class="h-4 w-full" />
      <Skeleton class="h-4 w-full" />
    </div>
  </div>
</li>
