---
import Layout from '~/layouts/layout.astro';

import { getI18N, getLangFromUrl } from '~/i18n/utils';
import H1 from '~/components/common/headings/h1.astro';
import Subtitle from '~/components/common/headings/subtitle.astro';
import AllProjects from '~/components/projects/index.astro';

const lang = getLangFromUrl(Astro.url);
const i18n = getI18N({ currentLocale: lang });
---

<Layout title={i18n.projects.title}>
  <main class="flex w-full flex-col space-y-14">
    <section class="flex w-full flex-col gap-4">
      <div class="flex flex-col justify-start gap-2">
        <H1>
          {i18n.projects.main.title}
        </H1>
        <Subtitle>
          {i18n.projects.main.subtitle}
        </Subtitle>
      </div>
      <p class="text-dimmed">
        {i18n.projects.main.description}
      </p>
    </section>

    <section>
      <AllProjects />
    </section>
  </main>
</Layout>
