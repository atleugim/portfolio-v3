---
import BgPattern from '../components/common/bg-pattern.astro';
import Footer from '../components/footer/index.astro';
import Header from '../components/header/index.astro';
import '@fontsource-variable/inter';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>

		<script is:inline>
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
	</head>
	<body class='relative antialiased dark:bg-gray-950 text-gray-950 dark:text-gray-100 bg-gray-100'>

		<BgPattern />

		<div class='flex h-dvh w-full flex-col'>
			<div class='relative flex w-full flex-col items-center justify-start space-y-10'>
				<Header />
				<div class='w-full max-w-prose space-y-10 px-5 pb-5 md:px-0'>
					<slot />
					<Footer />
				</div>
			</div>
		</div>
	</body>
</html>

<style is:global>
	body {
		font-family: 'Inter Variable', sans-serif;
	}

	.underline {
		text-decoration: underline;
	}
</style>